{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false
    },
    "exclude": [
      "node_modules",
      "portal"
    ],
    "include": [
        "./src/**/*.ts", "tests/**/*.ts"
    ]
  }